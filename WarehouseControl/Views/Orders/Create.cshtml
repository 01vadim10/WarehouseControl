@model WarehouseControl.Models.Order

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.DropDownList("ShopId", ViewBag.ShopId as MultiSelectList, new {@class="form-control"})
                @Html.ValidationMessageFor(model => model.Shop)
            </div>
            <div class="form-group">
                @Html.DropDownList("SupplierId", ViewBag.SupplierId as MultiSelectList, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Supplier)
            </div>
            <div class="form-group">
                <label asp-for="Contract" class="control-label"></label>
                <input asp-for="Contract" class="form-control" />
                <span asp-validation-for="Contract" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SupplyDate" class="control-label"></label>
                <input type="date" asp-for="SupplyDate" class="form-control" />
                <span asp-validation-for="SupplyDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DropDownList("ProductId", ViewBag.ProductId as MultiSelectList, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Product)
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
